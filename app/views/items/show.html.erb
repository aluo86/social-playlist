<% title(@item.title, @playlist.name) %>

<ul class="breadcrumb">
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li><%= link_to @playlist.name, playlist_path(@playlist) %> <span class="divider">/</span></li>
  <li class="active"><%= @item.title %></li>
</ul>

<div id='item'>
  <h2><%= @item.title %></h2>
  <iframe width="420" height="315" src="http://www.youtube.com/embed/<%= @item.song.url.gsub("http://www.youtube.com/watch?v=", "") %>" frameborder="0" allowfullscreen></iframe><br />
</div>

