<% title(@playlist.name, "Playlists") %>

<div class="btn-group pull-right">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-cog"></i> Action
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to "New Item", new_playlist_item_path(@playlist) %></li>
    <li><%= link_to "Edit Playlist", edit_playlist_path(@playlist) %></li>
    <li class="divider"></li>
    <li><%= link_to "Delete Playlist",
         playlist_path(@playlist),
         :method => :delete,
         :data => { :confirm => "Are you sure you want to delete this playlist?" } %></li>
  </ul>
</div>


<h3><%= @playlist.name %></h3>
<p class="lead">Description:  <%= @playlist.description %></p>

<div id='playlist'>
  <%= @playlist.items.size %> videos <span id='user'>created by <i class="icon-user"></i><strong><em><%= getUserFromEmail(@playlist.user.email) %></strong></em></span>
</div><br />





<div class="row-fluid">

  <div class="span4">
    <% if @playlist.items.size > 0 %>
      <div id="player" class="img-polaroid"></div>
    <% end %>
  </div>

  <div class="span8">
    <ol id='items'>
      <% @playlist.items.each do |item| %>
      <li>
        <% curr_yt_id = item.song.url.gsub("http://www.youtube.com/watch?v=", "") %>
        <a href="#" class="il"><img src="http://i1.ytimg.com/vi/<%= curr_yt_id %>/mqdefault.jpg" class="img-polaroid" width="160" data-yt="<%= curr_yt_id %>" /></a>
        <%= link_to item.title, [@playlist, item], :class => 'tl' %>
      </li>
      <% end %>
    </ol>
  </div><!--span8 -->

</div><!--row-fluid -->


<%
@categories_string = @playlist.items.map {|item|
  "#{item.song.url.gsub("http://www.youtube.com/watch?v=", "")}"
}.join(',')
%>
