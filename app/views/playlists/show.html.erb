<% title(@playlist.name, "Playlists") %>
<h2><%= @playlist.name %></h2>
<%= @playlist.description %>
<div id='playlist'>
  <%= @playlist.items.size %> videos <span id='user'>Created by <%= getUserFromEmail(@playlist.user.email) %></span>
</div>
  <%= link_to 'Back', playlists_path, :class => 'btn' %>
<div class="btn-group">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-cog"></i> Action
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to "New Item", new_playlist_item_path(@playlist) %></li>
    <li><%= link_to "Edit Playlist", edit_playlist_path(@playlist) %></li>
    <li class="divider"></li>
    <li><%= link_to "Delete Playlist",
         playlist_path(@playlist),
         :method => :delete,
         :data => { :confirm => "Are you sure you want to delete this playlist?" } %></li>
  </ul>
</div>


<br /><br />

<ol id='items'>
  <% @playlist.items.each do |item| %>
  <li>
    <img src="http://i1.ytimg.com/vi/<%= item.song.url.gsub("http://www.youtube.com/watch?v=", "") %>/mqdefault.jpg" class="img-polaroid" width="180" /><br />
    <%= link_to item.title, [@playlist, item] %>
  </li>
  <% end %>
</ol>
